{{#each toggles as |toggle|}}
<div class="option-toggle{{#unless toggle.alwaysActive}} item{{/unless}}"
    data-item-id="{{toggle.itemId}}" data-domain="{{toggle.domain}}" data-option="{{toggle.option}}"
    data-label="{{toggle.label}}" data-placement="{{toggle.placement}}" {{#unless
    toggle.alwaysActive}} draggable="true" {{/unless}} data-filter-value="{{toggle.label}}">
    <label>
        <input type="checkbox" {{#if toggle.alwaysActive}} class="hidden"
            {{/if}}data-action="toggle-roll-option" {{disabled (or toggle.alwaysActive (not
            toggle.enabled))}} {{checked toggle.checked}} />
        <div class="name{{#if (not (or toggle.checked toggle.enabled))}} unchecked-disabled{{/if}}">
            {{toggle.label}}
        </div>
    </label>
    {{#if toggle.suboptions}}
    <select {{#if (eq toggle.suboptions.length 1)}}disabled="disabled"
        {{else}}data-action="set-suboption" {{/if}}>
        {{#each toggle.suboptions as |suboption|}}
        <option value="{{suboption.value}}" {{#if suboption.selected}} selected{{/if}}>
            {{localize suboption.label}}</option>
        {{/each}}
    </select>
    {{/if}}
    {{#unless toggle.alwaysActive}}
    <img src="{{toggle.img}}" class="drag-img">
    {{/unless}}
</div>
{{/each}}